<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_layout">

    <ImageView
        android:id="@+id/image"
        style="@style/list_item_image"/>

    <LinearLayout
        android:id="@+id/text_container"
        style="@style/list_item_text_container">

        <TextView
            android:id="@+id/default_translation"
            style="@style/list_item_english_text_translation"/>

        <TextView
            android:id="@+id/polish_translation"
            style="@style/list_item_basic_text_view"/>

    </LinearLayout>
</LinearLayout>